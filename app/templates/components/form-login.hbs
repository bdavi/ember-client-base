<div class="login-logo">
  <a href="/"><b>Base</b>App</a>
</div>

<div class="login-box-body">
  {{form-input-text value=email placeholder='Email' feedbackIcon='envelope'}}
  {{form-input-text value=password type='password' placeholder='Password' feedbackIcon='lock'}}
  {{#if showErrors}}
    <div class="help-block">
      <p class="text-danger">
        {{fa-icon 'ban'}}
        Either the email or password are incorrect.
      </p>
    </div>
  {{/if}}
  <div class="row">
    <div class="col-xs-4 col-xs-offset-8">
      {{button-action
      label="Login"
      onClickAction=(action 'login')
      }}
    </div>
  </div>

  <div>
    {{#link-to 'register'}}
      Need an account? Create one here.
    {{/link-to}}
  </div>

  <div>
    {{#link-to 'forgot-password'}}
      Forgot your password? Reset it here.
    {{/link-to}}
  </div>
</div>
