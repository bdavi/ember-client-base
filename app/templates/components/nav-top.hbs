{{#link-to 'authenticated' class='logo'}}
  <span class="logo-mini"><b>B</b>A</span>
  <span class="logo-lg"><b>Base</b>App</span>
{{/link-to}}

<nav class="navbar navbar-static-top" role="navigation">
  <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
    <span class="sr-only">Toggle navigation</span>
  </a>

  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        {{fa-icon 'gears'}}
      </button>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        {{#if (gt topOrganizations.length 1)}}
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{organization.name}} <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              {{#each topOrganizations as |org|}}
                <li>
                  {{#link-to 'authenticated.organization' org.id}}
                    {{org.name}}
                  {{/link-to}}
                </li>
              {{/each}}
              <li class="divider"></li>
              <li>
                {{#link-to 'authenticated.organizations'}}
                  All Organizations
                {{/link-to}}
              </li>
            </ul>
          </li>
        {{else}}
          <li>
            {{#link-to 'authenticated.organization' organization.id}}
              {{organization.name}}
            {{/link-to}}
          </li>
        {{/if}}
        {{nav-top-user-menu user=user}}
      </ul>
    </div>
  </div>
</nav>
