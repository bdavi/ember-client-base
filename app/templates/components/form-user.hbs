{{#content-box}}
  {{#content-box-body}}
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        {{form-input-text value=user.name isValid=user.isNameValid showErrors=showErrors label='Name'}}
      </div>

      <div class="col-xs-12 col-sm-12 col-md-6">
        {{form-input-text value=user.email isValid=user.isEmailValid showErrors=showErrors label='Email'}}
      </div>
    </div>
    {{form-errors-alert errors=(map-by 'message' user.errors) showErrors=showErrors}}
  {{/content-box-body}}

  {{#content-box-footer}}
    <div class="row">
      <div class="col-xs-12 col-sm-3">
        {{button-save onClickAction=(action 'save')}}
      </div>

      <div class="col-xs-12 col-sm-3">
        {{button-cancel onClickAction=(action 'cancel')}}
      </div>
    </div>
  {{/content-box-footer}}
{{/content-box}}
